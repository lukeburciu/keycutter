# Git functions

git-configure-signing-key() {
    local ssh_key_path="$1"
    local ssh_keytag="$2"

    if [[ -z "$ssh_keytag" || -z "$ssh_key_path" ]]; then
        log "Error: ssh_keytag and ssh_key_path are required."
        return 1
    fi

    git config gpg.format ssh
    git config user.signingkey <(ssh-authorized-keys gitlab.com_lukeburciu)
}